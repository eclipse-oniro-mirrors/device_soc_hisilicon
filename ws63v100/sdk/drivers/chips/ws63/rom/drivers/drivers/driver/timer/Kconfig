config TIMER_MAX_TIMERS_NUM
    int
    prompt "Max timers num"
    default 16
    depends on DRIVER_SUPPORT_TIMER

config TIMER_CLOCK_VALUE
    int
    prompt "Timer clock value in Hz."
    default 32000000
    depends on DRIVER_SUPPORT_TIMER
