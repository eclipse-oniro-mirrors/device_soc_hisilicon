if (defined(ohos_lite)) {
  copy("driver_adapter") {
    sources = [ "//device/soc/hisilicon/common/hi35xx_hal/media/camera/hi3516dv300/liteos_a/libs/libdriver_adapter.so" ]
    outputs = [ "$root_out_dir/{{source_file_part}}" ]
